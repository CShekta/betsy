<div class="col-md-12 text-center">
  <h1> <%= @product.name %> </h1>
  <div class ="row">
    <div class="product-image-container">
      <%= image_tag(@product.photo_url, class: "product-image") %>
    </div>
  </div>
  <h4> Price: $<%= number_with_precision(@product.price, :precision => 2, :delimiter => ',') %> </h4>
  <p> <%= @product.description %></p>

  <%= form_for @order_item do |f| %>
    <div class="input-group">
      <% if @product.inventory != 0 %>
        <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
      <% else %>
        <%= f.number_field :quantity, placeholder: "Item out of stock", class: "form-control" %>
      <% end %>

      <div class="input-group-btn">
        <%= f.hidden_field :product_id, value: @product.id %>
        <%= f.hidden_field :order_id %>
        <% if @product.inventory != 0  %>
          <%= f.submit "Add to Cart", class: "btn btn-primary" %>
        <% else %>
          <%= f.submit "Add to Cart", class: "btn btn-primary disabled" %>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if !@current_user.nil? && @current_user.id == @product.merchant_id %>
    <%= link_to "Edit Product", edit_merchant_product_path(@product.merchant_id, @product.id), class: "btn btn-default" %>
    <%= link_to "Delete Product", product_path(@product),method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
  <% else %>
    <%= link_to "Write a Review", new_product_review_path(@product.id), class: "btn btn-default" %>
  <% end %>



  <hr>
  <h4>Reviews</h4>
  <div>
    <% @product.reviews.each do |review| %>
      <ul>
        <li> <%= review.rating %> <p> <%= review.description %></p></li>
      </ul>
    <% end %>
  </div>
</div>
