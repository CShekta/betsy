<% if !flash.now[:error].nil? %>
  <%= flash.now[:error] %>
<% end %>

<%= form_for(:session_data, url: sessions_path, html: { class: "form-group" }) do |f| %>
  <div class = "form_group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
  <div class = "form_group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <br>
  <div class = "form_group">
    <%= f.submit "Login", class:"btn btn-info" %>
  </div>
<% end %>

<%= link_to "Become a new merchant", new_merchant_path %>
