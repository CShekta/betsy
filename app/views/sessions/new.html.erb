<% if !flash.now[:error].nil? %>
  <%= flash.now[:error] %>
<% end %>

<%= form_for(:session_data, url: sessions_path, html: { class: "form-group" }) do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control" %>
<%= f.submit "login", class:"btn btn-info" %>
<% end %>

